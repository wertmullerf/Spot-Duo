{
  "expo": {
    "name": "Shared Reviews",
    "slug": "shared-reviews-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/spot-duo.png",
      "resizeMode": "contain",
      "backgroundColor": "#007AFF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sharedreviews.app",
      "splash": {
        "image": "./assets/spot-duo.png",
        "resizeMode": "contain",
        "backgroundColor": "#007AFF"
      },
      "config": {
        "googleMapsApiKey": "YOUR_IOS_GOOGLE_MAPS_API_KEY"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#007AFF"
      },
      "splash": {
        "image": "./assets/spot-duo.png",
        "resizeMode": "contain",
        "backgroundColor": "#007AFF"
      },
      "package": "com.sharedreviews.app",
      "config": {
        "googleMapsApiKey": "YOUR_ANDROID_GOOGLE_MAPS_API_KEY"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir acceso a la ubicación para mostrar lugares cercanos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "La app necesita acceso a tus fotos para agregar imágenes a las reviews."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
